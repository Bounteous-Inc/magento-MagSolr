				<dt>
					<?php echo $facet->getLabel() ?>
					<!-- TODO move the following list into a separate block -->
					<dd>
						<ol>
						<?php foreach ($facet->getOptions() as $facetOption): ?>
							<li>
								<a href="<?php echo Mage::helper('core')->escapeUrl($facetOption->getAddUrl()) ?>"><?php echo $facetOption->getLabel() ?></a>
								<?php if ($this->shouldDisplayProductCount()): ?>
									(<?php echo $facetOption->getNumberOfResults() ?>)
								<?php endif; ?>
							</li>
						<?php endforeach ?>
						</ol>
					</dd>
				</dt>
			<?php endif ?>
			<?php endforeach ?>
		</dl>

	</div>
</div>
