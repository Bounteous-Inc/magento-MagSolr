<?php
/**
 * Product list template
 *
 * @see Mage_Catalog_Block_Result_Page_List
 */
?>
<?php
$_pageCollection    =   $this->getCollection();
$_helper            =   $this->helper('catalog/output');
?>
<?php if(!$_pageCollection->count()): ?>
    <p class="note-msg"><?php echo $this->__('There are no pages matching your search terms.') ?></p>
<?php else: ?>
    <div class="category-products">
        <?php // echo $this->getToolbarHtml() ?>
        <?php // List mode ?>
            <?php $_iterator = 0; ?>
            <ol class="products-list" id="results-list">
                <?php foreach ($_pageCollection as $_page): ?>
                    <li class="item<?php if( ++$_iterator == sizeof($_pageCollection) ): ?> last<?php endif; ?>">
                        <div class="product-shop">
                            <div class="f-fix">
                                <?php $_pageNameStripped = $this->stripTags($_page->getTitle(), null, true); ?>
                                <h2 class="product-name">
                                    <a href="<?php echo $_page->getUrl() ?>" title="<?php echo $_pageNameStripped; ?>">
                                        <?php echo $_page->getTitle() ?>
                                    </a>
                                </h2>
                                <div class="desc std">
                                    <?php foreach ($_page->getHighlights() as $highlight): ?>
                                        <p><?php echo $highlight ?></p>
                                    <?php endforeach ?>
                                    <a style="float: right;" href="<?php echo $_page->getUrl() ?>" title="<?php echo $_pageNameStripped ?>" class="link-learn"><?php echo $this->__('Read More') ?></a>
                                </div>
                            </div>
                        </div>
                    </li>
                <?php endforeach; ?>
            </ol>
            <script type="text/javascript">decorateList('results-list', 'none-recursive')</script>

        <div class="toolbar-bottom">
            <?php echo $this->getToolbarHtml() ?>
        </div>
    </div>
<?php endif; ?>
